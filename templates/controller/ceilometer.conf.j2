[DEFAULT]
#policy_file = /etc/ceilometer/policy.json
verbose = true
debug = true
insecure = true

##### AMQP #####
notification_topics = notifications,glance_notifications
rpc_backend = rabbit
rabbit_host= {{ RABBITMQ_HOST }}
rabbit_port=5672
rabbit_userid=guest
rabbit_password=guest
rabbit_virtual_host=/
rabbit_ha_queues=false

[database]
connection=mongodb://ceilometer:openstack@{{ CONTROLLER_MGT_IP }}:27017/ceilometer

[api]
host = {{ CONTROLLER_MGT_IP }}
port = 8777

auth_strategy = keystone

[keystone_authtoken]
auth_uri = https://{{ KEYSTONE_ENDPOINT }}:35357/v2.0
identity_uri = https://{{ KEYSTONE_ENDPOINT }}:5000
admin_tenant_name = service
admin_user = ceilometer
admin_password = ceilometer
revocation_cache_time = 10
insecure = True

[service_credentials]
os_auth_url = https://{{ KEYSTONE_ENDPOINT }}:5000/v2.0
os_username = ceilometer
os_tenant_name = service
os_password = ceilometer
insecure = True


